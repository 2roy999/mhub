{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "../dist/src/"
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./client.ts",
        "./index.ts",
        "./log.ts",
        "./Logger.ts",
        "./MClient.ts",
        "./Message.ts",
        "./ping.ts",
        "./pubsub.ts",
        "./server.ts",
        "./SocketHub.ts"
    ]
}
