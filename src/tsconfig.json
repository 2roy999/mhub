{
    "version": "1.7.5",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "../dist/src/"
    },
    "filesGlob": [
        "../typings/tsd.d.ts",
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "files": [
        "../typings/tsd.d.ts",
        "./client.ts",
        "./index.ts",
        "./log.ts",
        "./logger.ts",
        "./match.ts",
        "./message.ts",
        "./mhub-client.ts",
        "./mhub-ping.ts",
        "./mhub-server.ts",
        "./nodes/consoleDestination.ts",
        "./nodes/exchange.ts",
        "./nodes/pingResponder.ts",
        "./nodes/queue.ts",
        "./nodes/testSource.ts",
        "./nodes/topicQueue.ts",
        "./pubsub.ts",
        "./sockethub.ts",
        "./tls.ts",
        "./types.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
